<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashscreen"
    android:layout_centerVertical="true"
    android:gravity="center"
    tools:context="com.arfanet.nuvo.belajarti.SplashScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtsplash"
        android:layout_marginTop="25dp"
        android:text="Aplikasi Media Pembelajaran"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtsplash2"
        android:layout_below="@+id/txtsplash"
        android:paddingTop="5dp"
        android:text="Teknologi Informasi"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        />
    <TextView
        android:text="SMPIT BINA UMMAH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/tvSplash"
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:layout_below="@+id/txtsplash2"
        android:paddingTop="5dp"
        android:textColor="#00e21e"
        android:textColorHighlight="#ffffff"
         />

    <ProgressBar
        android:id="@+id/progresBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"/>

</RelativeLayout>
